src/components/Sidebar.tsx

import React from 'react';
import styled from 'styled-components';
import { Link, useLocation } from 'react-router-dom';
import { IoHomeOutline, IoHome, IoSearchOutline, IoSearch } from 'react-icons/io5';
import { BiLibrary } from 'react-icons/bi';
import { AiOutlinePlus } from 'react-icons/ai';

const SidebarContainer = styled.aside`
  width: 300px;
  background-color: #000000;
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding: 8px;
`;

const NavigationSection = styled.div`
  background-color: #121212;
  border-radius: 8px;
  padding: 8px;
`;

const NavItem = styled(Link)<{ active?: boolean }>`
  display: flex;
  align-items: center;
  gap: 16px;
  padding: 8px 12px;
  color: ${props => props.active ? '#fff' : '#b3b3b3'};
  font-weight: 700;
  font-size: 0.875rem;
  border-radius: 4px;
  transition: color 0.2s ease;

  &:hover {
    color: #fff;
  }

  svg {
    width: 24px;
    height: 24px;
  }
`;

const LibrarySection = styled(NavigationSection)`
  flex: 1;
`;

const LibraryHeader = styled.div`
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8px 16px;
  color: #b3b3b3;

  .title {
    display: flex;
    align-items: center;
    gap: 12px;
    font-weight: 700;
    font-size: 0.875rem;
  }
`;

const CreateButton = styled.button`
  color: #b3b3b3;
  background: none;
  border: none;
  padding: 4px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;

  &:hover {
    color: #fff;
  }
`;

const LibraryContent = styled.div`
  padding: 8px;
  color: #b3b3b3;
  font-size: 0.875rem;
`;

const CreatePlaylistCard = styled.div`
  background: #242424;
  border-radius: 8px;
  padding: 16px;
  margin-top: 8px;

  h3 {
    color: #fff;
    font-size: 1rem;
    margin-bottom: 8px;
  }

  p {
    margin-bottom: 16px;
    font-size: 0.875rem;
  }

  button {
    background: #fff;
    color: #000;
    border: none;
    padding: 6px 16px;
    border-radius: 500px;
    font-weight: 700;
    font-size: 0.875rem;
    cursor: pointer;
    transition: transform 0.2s ease;

    &:hover {
      transform: scale(1.04);
    }
  }
`;

const Sidebar: React.FC = () => {
  const location = useLocation();

  return (
    <SidebarContainer>
      <NavigationSection>
        <NavItem to="/" active={location.pathname === '/'}>
          {location.pathname === '/' ? <IoHome /> : <IoHomeOutline />}
          Home
        </NavItem>
        <NavItem to="/search" active={location.pathname === '/search'}>
          {location.pathname === '/search' ? <IoSearch /> : <IoSearchOutline />}
          Search
        </NavItem>
      </NavigationSection>

      <LibrarySection>
        <LibraryHeader>
          <div className="title">
            <BiLibrary />
            Your Library
          </div>
          <CreateButton>
            <AiOutlinePlus size={20} />
          </CreateButton>
        </LibraryHeader>

        <LibraryContent>
          <CreatePlaylistCard>
            <h3>Create your first playlist</h3>
            <p>It's easy, we'll help you</p>
            <button>Create playlist</button>
          </CreatePlaylistCard>
        </LibraryContent>
      </LibrarySection>
    </SidebarContainer>
  );
};

export default Sidebar;

src/components/Player.tsx

import React, { useState } from 'react';
import styled from 'styled-components';
import {
  IoPlayCircle,
  IoPauseCircle,
  IoPlaySkipForward,
  IoPlaySkipBack,
  IoShuffle,
  IoRepeat,
} from 'react-icons/io5';
import { BiVolumeFull } from 'react-icons/bi';

const PlayerContainer = styled.div`
  background-color: #181818;
  border-top: 1px solid #282828;
  padding: 8px 16px;
  height: 90px;
  display: grid;
  grid-template-columns: 1fr 2fr 1fr;
  align-items: center;
`;

const TrackInfo = styled.div`
  display: flex;
  align-items: center;
  gap: 12px;
`;

const TrackImage = styled.div`
  width: 56px;
  height: 56px;
  background-color: #282828;
  border-radius: 4px;
`;

const TrackDetails = styled.div`
  display: flex;
  flex-direction: column;
  gap: 4px;

  h4 {
    font-size: 0.875rem;
    color: #fff;
    font-weight: 400;
  }

  p {
    font-size: 0.75rem;
    color: #a7a7a7;
  }
`;

const PlayerControls = styled.div`
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
`;

const ControlButtons = styled.div`
  display: flex;
  align-items: center;
  gap: 16px;
`;

const ControlButton = styled.button`
  background: none;
  border: none;
  color: #a7a7a7;
  cursor: pointer;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;

  &:hover {
    color: #fff;
  }

  &.play-button {
    color: #fff;

    &:hover {
      transform: scale(1.04);
    }
  }
`;

const ProgressBar = styled.div`
  width: 100%;
  max-width: 400px;
  height: 4px;
  background-color: #4d4d4d;
  border-radius: 2px;
  position: relative;
  cursor: pointer;

  &::after {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 30%;
    height: 100%;
    background-color: #fff;
    border-radius: 2px;
  }

  &:hover::after {
    background-color: #1db954;
  }
`;

const VolumeControls = styled.div`
  display: flex;
  align-items: center;
  gap: 8px;
  justify-content: flex-end;
`;

const VolumeBar = styled(ProgressBar)`
  max-width: 100px;
`;

const Player: React.FC = () => {
  const [isPlaying, setIsPlaying] = useState(false);

  return (
    <PlayerContainer>
      <TrackInfo>
        <TrackImage />
        <TrackDetails>
          <h4>Nothing is playing</h4>
          <p>Open Spotify to start playing</p>
        </TrackDetails>
      </TrackInfo>

      <PlayerControls>
        <ControlButtons>
          <ControlButton>
            <IoShuffle size={18} />
          </ControlButton>
          <ControlButton>
            <IoPlaySkipBack size={18} />
          </ControlButton>
          <ControlButton
            className="play-button"
            onClick={() => setIsPlaying(!isPlaying)}
          >
            {isPlaying ? <IoPauseCircle size={32} /> : <IoPlayCircle size={32} />}
          </ControlButton>
          <ControlButton>
            <IoPlaySkipForward size={18} />
          </ControlButton>
          <ControlButton>
            <IoRepeat size={18} />
          </ControlButton>
        </ControlButtons>
        <ProgressBar />
      </PlayerControls>

      <VolumeControls>
        <BiVolumeFull size={20} color="#a7a7a7" />
        <VolumeBar />
      </VolumeControls>
    </PlayerContainer>
  );
};

export default Player;

