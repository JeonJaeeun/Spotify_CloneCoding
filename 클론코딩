src/pages/Library.tsx

import React, { useState } from 'react';
import styled from 'styled-components';
import { IoSearchOutline, IoList } from 'react-icons/io5';
import { BsGrid3X3Gap } from 'react-icons/bs';

const LibraryContainer = styled.div`
  padding: 24px;
`;

const LibraryHeader = styled.div`
  position: sticky;
  top: 64px;
  background: #121212;
  padding: 16px 0;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
`;

const HeaderActions = styled.div`
  display: flex;
  gap: 16px;
`;

const IconButton = styled.button`
  background: none;
  border: none;
  color: #a7a7a7;
  padding: 8px;
  cursor: pointer;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;

  &:hover {
    color: white;
  }

  &.active {
    color: white;
  }
`;

const EmptyLibrary = styled.div`
  text-align: center;
  padding: 60px 20px;

  h2 {
    font-size: 32px;
    margin-bottom: 16px;
    color: #fff;
  }

  p {
    color: #a7a7a7;
    margin-bottom: 32px;
  }

  button {
    background: #1db954;
    color: black;
    border: none;
    padding: 12px 30px;
    border-radius: 500px;
    font-weight: 700;
    font-size: 16px;
    cursor: pointer;
    transition: transform 0.2s ease;

    &:hover {
      transform: scale(1.05);
      background: #1ed760;
    }
  }
`;

const PlaylistsGrid = styled.div`
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  gap: 24px;
  margin-top: 24px;
`;

const PlaylistsList = styled.div`
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-top: 24px;
`;

const Library: React.FC = () => {
  const [viewMode, setViewMode] = useState<'grid' | 'list'>('grid');

  return (
    <LibraryContainer>
      <LibraryHeader>
        <HeaderActions>
          <IconButton>
            <IoSearchOutline size={24} />
          </IconButton>
        </HeaderActions>
        <HeaderActions>
          <IconButton 
            className={viewMode === 'grid' ? 'active' : ''}
            onClick={() => setViewMode('grid')}
          >
            <BsGrid3X3Gap size={20} />
          </IconButton>
          <IconButton 
            className={viewMode === 'list' ? 'active' : ''}
            onClick={() => setViewMode('list')}
          >
            <IoList size={24} />
          </IconButton>
        </HeaderActions>
      </LibraryHeader>

      <EmptyLibrary>
        <h2>Create your first playlist</h2>
        <p>It's easy, we'll help you</p>
        <button>Create playlist</button>
      </EmptyLibrary>
    </LibraryContainer>
  );
};

export default Library;

src/pages/Search.tsx

import React, { useState } from 'react';
import styled from 'styled-components';
import { IoSearchOutline } from 'react-icons/io5';

const SearchContainer = styled.div`
  padding: 24px;
`;

const SearchHeader = styled.div`
  position: sticky;
  top: 64px;
  background: #121212;
  padding: 16px 0;
  z-index: 2;
`;

const SearchInputWrapper = styled.div`
  max-width: 364px;
  position: relative;
`;

const SearchInput = styled.input`
  width: 100%;
  padding: 14px 40px;
  border-radius: 500px;
  border: none;
  font-size: 0.875rem;
  color: #000;
  background: white;

  &:focus {
    outline: none;
  }
`;

const SearchIcon = styled(IoSearchOutline)`
  position: absolute;
  left: 12px;
  top: 50%;
  transform: translateY(-50%);
  color: #000;
`;

const BrowseSection = styled.section`
  margin-top: 32px;
`;

const SectionTitle = styled.h2`
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 16px;
  color: #fff;
`;

const GenresGrid = styled.div`
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  gap: 24px;
`;

const GenreCard = styled.div<{ color: string }>`
  background: ${props => props.color};
  border-radius: 8px;
  padding: 16px;
  aspect-ratio: 1;
  position: relative;
  cursor: pointer;
  overflow: hidden;
  transition: transform 0.3s ease;

  &:hover {
    transform: scale(1.04);
  }

  h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #fff;
  }
`;

const ResultsGrid = styled.div`
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  gap: 24px;
  margin-top: 24px;
`;

const ResultCard = styled.div`
  background: #181818;
  padding: 16px;
  border-radius: 6px;
  cursor: pointer;
  transition: background 0.3s ease;

  &:hover {
    background: #282828;
  }
`;

const ResultImage = styled.div`
  width: 100%;
  aspect-ratio: 1;
  background: #282828;
  border-radius: 4px;
  margin-bottom: 16px;
`;

const ResultTitle = styled.h3`
  font-size: 16px;
  color: #fff;
  margin-bottom: 4px;
`;

const ResultDescription = styled.p`
  font-size: 14px;
  color: #a7a7a7;
`;

const Search: React.FC = () => {
  const [searchTerm, setSearchTerm] = useState('');

  const genres = [
    { id: 1, name: 'Podcasts', color: '#27856a' },
    { id: 2, name: 'Live Events', color: '#1e3264' },
    { id: 3, name: 'Made For You', color: '#8400e7' },
    { id: 4, name: 'New Releases', color: '#e8115b' },
    { id: 5, name: 'Pop', color: '#148a08' },
    { id: 6, name: 'Hip-Hop', color: '#bc5900' },
    { id: 7, name: 'Rock', color: '#e91429' },
    { id: 8, name: 'Latin', color: '#e1118c' },
    { id: 9, name: 'Mood', color: '#477d95' },
    { id: 10, name: 'Dance/Electronic', color: '#509bf5' },
    { id: 11, name: 'Indie', color: '#b02897' },
    { id: 12, name: 'Chill', color: '#8c67ab' }
  ];

  return (
    <SearchContainer>
      <SearchHeader>
        <SearchInputWrapper>
          <SearchIcon size={24} />
          <SearchInput
            type="text"
            placeholder="What do you want to listen to?"
            value={searchTerm}
            onChange={(e) => setSearchTerm(e.target.value)}
          />
        </SearchInputWrapper>
      </SearchHeader>

      {!searchTerm ? (
        <BrowseSection>
          <SectionTitle>Browse all</SectionTitle>
          <GenresGrid>
            {genres.map((genre) => (
              <GenreCard key={genre.id} color={genre.color}>
                <h3>{genre.name}</h3>
              </GenreCard>
            ))}
          </GenresGrid>
        </BrowseSection>
      ) : (
        <ResultsGrid>
          {/* ê²€ìƒ‰ ê²°ê³¼ê°€ ìˆì„ ê²½ìš° í‘œì‹œ */}
        </ResultsGrid>
      )}
    </SearchContainer>
  );
};

export default Search;

